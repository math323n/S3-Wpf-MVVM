<Window x:Class="S3_Wpf_MVVM.gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <DockPanel Margin="1">
    <Menu DockPanel.Dock="Top">
            <Menu.Items>
                <MenuItem Header="Products">
                    <MenuItem Uid="1" Header="Show all"
                              Click="Navigation_Click" />
                </MenuItem>
                <MenuItem Header="Suppliers">
                    <MenuItem  Uid="2" Header="Show all"
                              Click="Navigation_Click" />
                </MenuItem>
            </Menu.Items>
        </Menu>

        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom"
                       Background="Gray"
                       Height="25" />
            <UserControl x:Name="displayedUserControl" />
        </DockPanel>
    </DockPanel>
    

</Window>
